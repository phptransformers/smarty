{
    "name": "phptransformers/smarty",
    "description": "Smarty implementation of PhpTransformer.",
    "keywords": [
        "PhpTransformers", "phptransformer", "Smarty", "Template Engine", "Templates"
    ],
    "homepage": "https://github.com/phptransformers/phptransformer",
    "license": "MIT",
    "authors": [
        {
            "name": "Rob Loach",
            "email": "robloach@gmail.com",
            "homepage": "http://robloach.net",
            "role": "Developer"
        },
        {
            "name": "MacFJA",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=5.3.0",
        "smarty/smarty": "~3.1.21",
        "phptransformers/phptransformer": "~0.0.1"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.6",
        "squizlabs/php_codesniffer": "~2.3"
    },
    "autoload": {
        "psr-4": {
            "PhpTransformers\\Smarty\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpTransformers\\Smarty\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always --coverage-text --coverage-clover=coverage.clover",
        "phpcs": "phpcs"
    }
}
